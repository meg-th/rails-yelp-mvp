<div class = "container">
  <h1>Add a new restaurant to our list:</h1>
  <div class = "form">
  	<%= simple_form_for(@restaurant) do |f|%>
	<%= f.input :name %>
	<%= f.input :address %>
	<%= f.input :phone_number %>
	<%= f.input :category, prompt: "Choose a cuisine category", collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
	<%= f.button :submit, class: "btn btn-primary"%>
  <% end %>
  </div>
  <%= link_to "Return to homepage", restaurants_path %>
</div>
